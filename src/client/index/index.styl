.index-page

    padding 10px 10px

    background-color rgb(0, 159, 147)

    > form > input
        width 100%
        box-sizing border-box
        height 30px
        padding 3px 10px
        border-radius 3px
        border 1px solid #aaa
        outline-color rgb(0, 159, 147)

    .todo-list
        margin-top 10px

    .todo
        display flex
        margin-top 3px
        height 30px
        line-height 30px
        border-radius 3px
        background-color #fff

        > input[type=checkbox]
            width 16px
            margin 10px
            flex none

        > a
            text-decoration none
            color #333
            flex 1
